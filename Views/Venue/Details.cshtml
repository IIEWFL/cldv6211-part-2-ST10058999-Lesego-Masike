@model EventEaseProject.Models.Venue

@{
    ViewData["Title"] = "Venue Details";
}

<h1>Venue Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Venue Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.VenueName)</dd>
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.VenueLocation)</dd>
        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.VenueCapacity)</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.VenueId" class="btn btn-warning">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.VenueId" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>