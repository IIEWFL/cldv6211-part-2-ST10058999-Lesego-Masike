@model EventEaseProject.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<h1>Delete Venue</h1>

<h3>Are you sure you want to delete this venue?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Venue Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.VenueName)</dd>
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.VenueLocation)</dd>
        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.VenueCapacity)</dd>
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10"><img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "https://via.placeholder.com/50" : Model.ImageUrl)" alt="Venue Image" style="width:50px;height:50px;" /></dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="VenueId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>