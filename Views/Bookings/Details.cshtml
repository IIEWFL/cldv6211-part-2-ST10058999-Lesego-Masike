@model EventEaseProject.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<h1>Booking Details</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

@if (Model == null)
{
    <p>Booking not found.</p>
}
else
{
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BookingId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BookingId)
            </dd>
            <dt class="col-sm-2">
                Event
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.EventDescription)
            </dd>
            <dt class="col-sm-2">
                Venue
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Venue.VenueName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BookingDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BookingDate)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.BookingId" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model?.BookingId" class="btn btn-danger">Delete</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
}