@model EventEaseProject.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<h1>Event Details</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

@if (Model == null)
{
    <p>Event not found.</p>
}
else
{
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EventId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EventId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EventDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EventDescription)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EventDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EventDate)
            </dd>
            <dt class="col-sm-2">
                Booking Count
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BookingCount)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.EventId" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model?.EventId" class="btn btn-danger">Delete</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
}